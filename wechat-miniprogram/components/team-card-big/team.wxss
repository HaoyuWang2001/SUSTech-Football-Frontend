/* components/team-card-big/team.wxss - 现代化设计 (使用橙色系颜色设计系统) */
@import '../../styles/mixins.wxss';

/* ============================================================================
 * 卡片容器
 * ============================================================================ */

.container {
  margin: 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 4rpx 24rpx rgba(237, 108, 0, 0.1),
    0 2rpx 12rpx rgba(237, 108, 0, 0.08);
  padding: 0;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.container:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 2rpx 12rpx rgba(237, 108, 0, 0.08),
    0 1rpx 6rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

/* 顶部装饰条 */
.card-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1;
}

/* ============================================================================
 * 卡片内容区域
 * ============================================================================ */

.card-content {
  padding: 40rpx 32rpx 32rpx 32rpx;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
}

/* ============================================================================
 * 球队Logo区域
 * ============================================================================ */

.team-logo-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.team-logo-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(237, 108, 0, 0.08);
  border-radius: 50%;
  border: 3rpx solid rgba(237, 108, 0, 0.15);
  box-shadow: 0 4rpx 16rpx rgba(237, 108, 0, 0.15);
}

.team-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: relative;
  z-index: 2;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
  transition: all 0.3s ease;
}

.container:active .team-logo {
  transform: scale(0.95);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

/* ============================================================================
 * 球队信息区域
 * ============================================================================ */

.team-info {
  flex: 1;
  min-width: 0;
}

/* 球队头部 */
.team-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08);
}

.team-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1.3;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all 0.3s ease;
}

.container:active .team-name {
  color: #ed6c00;
}

.team-status {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.status-badge {
  display: inline-block;
  padding: 10rpx 18rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #ed6c00;
  background-color: rgba(237, 108, 0, 0.12);
  text-align: center;
  min-width: 90rpx;
  transition: all 0.3s ease;
}

.container:active .status-badge {
  background-color: rgba(237, 108, 0, 0.18);
  color: #ed6c00;
}

/* ============================================================================
 * 球队ID显示
 * ============================================================================ */

.team-id-container {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background-color: rgba(237, 108, 0, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.1);
}

.team-id-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.team-id-value {
  font-size: 28rpx;
  font-weight: 800;
  color: #ed6c00;
  flex: 1;
  text-align: left;
}

.container:active .team-id-value {
  color: #ff8c32;
}

