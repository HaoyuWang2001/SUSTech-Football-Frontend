/* ============================================================================
 * 球队操作区域
 * ============================================================================ */

.team-actions {
  flex-shrink: 0;
  margin-left: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
  min-width: 80rpx;
}

/* ============================================================================
 * 响应式调整
 * ============================================================================ */

@media (max-width: 600rpx) {
  .container {
    margin: 16rpx 16rpx;
  }

  .card-content {
    padding: 30rpx 24rpx 26rpx 24rpx;
    gap: 24rpx;
  }

  /* 响应式下有收藏按钮时的布局调整 */
  .card-content.has-favorite-button {
    padding-right: 80rpx; /* 在响应式下稍微减少预留空间 */
  }

  /* 响应式下无收藏按钮时的布局调整 */
  .card-content.no-favorite-button {
    padding-right: 24rpx; /* 使用原始内边距 */
    /* 保持原有顶部对齐，不设置 align-items */
  }
}