.container:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 4rpx 20rpx rgba(237, 108, 0, 0.08),
    0 2rpx 10rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

.image {
  flex: 0 0 auto;
  width: 120rpx;
  height: 120rpx;
  margin: 0;
  margin-left: 20rpx;
  padding: 0;
  border-right: 1rpx solid rgba(237, 108, 0, 0.15);
  border-radius: 50%;
  background: #f8f8f8;
  border: 3rpx solid rgba(237, 108, 0, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 10rpx;
  margin-right: 30rpx;
  transition: all 0.3s ease;
  object-fit: cover;
}

.container:active .image {
  transform: scale(0.95);
  border-color: rgba(237, 108, 0, 0.25);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border-right-color: rgba(237, 108, 0, 0.25);
}

.sub-container {
  flex: 0 0 auto;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  max-width: 50%;
  min-width: 200rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 700;
  white-space: normal;
  word-wrap: break-word;
  color: #666666; /* 球队名称颜色改为灰色 */
  line-height: 1.3;
  letter-spacing: 0.3rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.container:active .name {
  color: rgb(237, 108, 0); /* 激活状态使用橙色 */
}

.number {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  background: rgba(237, 108, 0, 0.08);
  border-radius: 12rpx;
  display: inline-block;
  align-self: flex-start;
  border: 1rpx solid rgba(237, 108, 0, 0.1);
  transition: all 0.3s ease;
}

.container:active .number {
  background: rgba(237, 108, 0, 0.15);
  border-color: rgba(237, 108, 0, 0.2);
  color: rgb(237, 108, 0);
}

.buttons {
  flex: 1 1 auto;
  display: flex;
  justify-content: flex-end;
  padding-left: 20rpx;
}