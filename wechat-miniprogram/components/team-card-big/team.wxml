<!--components/team-card-big/team.wxml-->
<view class="container" bind:tap="onCardTap">
  <!-- 顶部装饰条 -->
  <view class="card-header"></view>

  <!-- 卡片内容 -->
  <view class="card-content">
    <!-- LOGO -->
    <view class="team-logo-container">
      <view class="team-logo-bg"></view>
      <image class="team-logo" src="{{img}}" mode="aspectFill"></image>
    </view>

    <!-- 球队信息 -->
    <view class="team-info">
      <view class="team-header">
        <text class="team-name">{{name}}</text>
        <view class="team-status">
          <text class="status-badge">{{displayNumber}}</text>
        </view>
      </view>

      <!-- 球队ID -->
      <view class="team-id-container" wx:if="{{teamId}}">
        <text class="team-id-label">球队ID：</text>
        <text class="team-id-value">{{teamId}}</text>
      </view>
    </view>

    <!-- 按钮插槽 -->
    <view class="team-actions" wx:if="{{has_favorite_button}}">
      <slot></slot>
    </view>
  </view>
</view>