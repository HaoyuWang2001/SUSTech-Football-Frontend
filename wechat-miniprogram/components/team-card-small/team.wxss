/* components/team-card-small/team.wxss - 现代化设计 (使用橙色系颜色设计系统) */
@import '../../styles/mixins.wxss';

.container {
  margin: 0 10rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 8rpx 32rpx rgba(237, 108, 0, 0.1),
    0 4rpx 16rpx rgba(237, 108, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  padding: 40rpx 30rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 180rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%); /* 使用橙色渐变 (原为青绿到深绿) */
  border-radius: 24rpx 24rpx 0 0;
}

.container:active {
  transform: translateY(6rpx) scale(0.98);
  box-shadow:
    0 4rpx 20rpx rgba(237, 108, 0, 0.08),
    0 2rpx 10rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

.image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f8f8f8;
  border: 3rpx solid rgba(237, 108, 0, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
  object-fit: cover;
}

.container:active .image {
  transform: scale(0.95);
  border-color: rgba(237, 108, 0, 0.25);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.name {
  padding-top: 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #666666; /* 球队名称颜色改为灰色 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: block;
  text-align: center;
  line-height: 1.3;
  letter-spacing: 0.3rpx;
  transition: all 0.3s ease;
}

.container:active .name {
  color: rgb(237, 108, 0); /* 激活状态使用橙色 */
}

.buttons {
  margin-top: 20rpx;
  width: 100%;
}
