/* components/match-card-small/match.wxss - 现代化设计 (使用橙色系颜色设计系统) */
@import '../../styles/mixins.wxss';

.match-card {
  flex: 0 0 auto;
  display: inline-flex;
  flex-direction: column;
  margin: 20rpx 20rpx 20rpx 0;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 8rpx 32rpx rgba(237, 108, 0, 0.1),
    0 4rpx 16rpx rgba(237, 108, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  padding: 30rpx 24rpx;
  min-width: 300rpx;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  overflow: hidden;
}

.match-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, rgb(237, 108, 0) 0%, rgb(255, 140, 50) 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.match-card:active {
  transform: translateY(6rpx) scale(0.98);
  box-shadow:
    0 4rpx 20rpx rgba(237, 108, 0, 0.08),
    0 2rpx 10rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

.time {
  display: block;
  text-align: center;
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  font-weight: 500;
  letter-spacing: 0.3rpx;
}

.name {
  display: block;
  font-size: 28rpx;
  color: #666666; /* 赛事名称颜色改为灰色 */
  text-align: center;
  font-weight: 600;
  margin-bottom: 30rpx;
  letter-spacing: 0.5rpx;
}

.info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.team {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.team-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #f8f8f8;
  border: 3rpx solid rgba(237, 108, 0, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.match-card:active .team-icon {
  transform: scale(0.95);
  border-color: rgba(237, 108, 0, 0.25);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.team-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  text-align: center;
  font-weight: 600;
  color: #666666; /* 球队名称颜色改为灰色 */
  max-width: 140rpx;
  min-width: 140rpx;
  line-height: 1.3;
}

.middle {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 24rpx;
  padding: 20rpx 24rpx;
  background: rgba(237, 108, 0, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.1);
  min-width: 120rpx;
}

.score {
  font-size: 44rpx;
  font-weight: 800;
  color: rgb(237, 108, 0);
  letter-spacing: 1rpx;
  line-height: 1.2;
  text-shadow: 0 2rpx 4rpx rgba(237, 108, 0, 0.2);
}

.penalty {
  font-size: 24rpx;
  color: rgb(237, 108, 0);
  font-weight: 600;
  margin-top: 4rpx;
  opacity: 0.9;
}

.not-begin {
  font-size: 28rpx;
  font-weight: 700;
  color: rgb(237, 108, 0);
  padding: 16rpx 20rpx;
  background: rgba(237, 108, 0, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.2);
  letter-spacing: 0.5rpx;
}