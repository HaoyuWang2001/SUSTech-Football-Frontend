/* components/example-color-system/example.wxss */
/* 颜色设计系统使用示例 */

/* 导入颜色设计系统混入类 */
@import '../../styles/mixins.wxss';

/* 容器样式 */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
  border-radius: 32rpx;
  .border-card();
  .shadow-card();
}

/* 标题区域 */
.header {
  margin-bottom: 60rpx;
  text-align: center;
}

.header-decoration {
  .gradient-primary();
  height: 8rpx;
  border-radius: 4rpx;
  margin: 0 auto 32rpx;
  width: 120rpx;
}

.header-title {
  display: block;
  .primary-color();
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  .gray-dark-color();
  font-size: 28rpx;
  opacity: 0.8;
}

/* 区域样式 */
.section {
  margin-bottom: 60rpx;
}

.section-title {
  display: block;
  .primary-color();
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(237, 108, 0, 0.1);
}

/* 颜色网格 */
.colors-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.color-item {
  padding: 40rpx 24rpx;
  border-radius: 24rpx;
  .shadow-card();
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.color-item:active {
  .shadow-card-hover();
  transform: translateY(-4rpx);
}

.color-item-title {
  .white-color();
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.color-item-value {
  .white-color();
  font-size: 22rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 混入类示例区域 */
.mixins-example {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 现代卡片示例 */
.example-card {
  padding: 40rpx;
  .modern-card();
}

.example-card-header {
  .modern-card-header();
}

.example-card-title {
  display: block;
  .primary-color();
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.example-card-text {
  display: block;
  .gray-dark-color();
  font-size: 26rpx;
  line-height: 1.5;
}

/* 按钮示例 */
.example-buttons {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.example-button {
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.primary-button {
  .primary-button();
}

.primary-button:active {
  .primary-button-active();
}

.secondary-button {
  .secondary-button();
}

.secondary-button:active {
  .secondary-button-active();
}

.primary-button-disabled {
  .primary-button-disabled();
}

/* 文本示例 */
.example-texts {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.example-text {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  padding: 24rpx;
  .border-card();
  border-radius: 16rpx;
  background-color: #ffffff;
}

/* 阴影示例 */
.example-shadows {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.example-shadow {
  padding: 40rpx 24rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
  .gray-dark-color();
  transition: all 0.3s ease;
}

.shadow-card {
  .shadow-card();
}

.shadow-button {
  .shadow-button();
}

.shadow-image {
  .shadow-image();
}

.example-shadow:active {
  transform: translateY(-2rpx);
}

/* 渐变示例 */
.example-gradients {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.example-gradient {
  padding: 60rpx 24rpx;
  border-radius: 24rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  .white-color();
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  .shadow-card();
  transition: all 0.3s ease;
}

.example-gradient:active {
  transform: translateY(-4rpx);
  .shadow-card-hover();
}

.gradient-primary {
  .gradient-primary();
}

.gradient-primary-light {
  .gradient-primary-light();
}

.gradient-background {
  .gradient-background();
  .gray-dark-color();
  text-shadow: none;
}

/* 使用说明区域 */
.instructions {
  .primary-alpha12-bg();
  border-radius: 24rpx;
  padding: 40rpx;
}

.instruction-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.instruction-number {
  flex-shrink: 0;
  .primary-bg();
  .white-color();
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
}

.instruction-text {
  flex: 1;
  .gray-dark-color();
  font-size: 26rpx;
  line-height: 1.5;
}

.instruction-highlight {
  .primary-color();
  font-weight: 600;
}

/* 响应式调整 */
@media (max-width: 768rpx) {
  .colors-grid {
    grid-template-columns: 1fr;
  }

  .example-shadows,
  .example-gradients {
    grid-template-columns: 1fr;
  }

  .example-buttons {
    flex-direction: column;
  }
}