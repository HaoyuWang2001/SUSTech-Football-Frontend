/* components/player-card-small/player.wxss - 现代化设计 (使用橙色系颜色设计系统) */
@import '../../styles/mixins.wxss';

.player-card {
  margin: 20rpx 20rpx 20rpx 0;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 8rpx 32rpx rgba(237, 108, 0, 0.1),
    0 4rpx 16rpx rgba(237, 108, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  padding: 40rpx 30rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 180rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  overflow: hidden;
}

.player-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, rgb(237, 108, 0) 0%, rgb(255, 140, 50) 100%); /* 橙色渐变 */
  border-radius: 24rpx 24rpx 0 0;
}

.player-card:active {
  transform: translateY(6rpx) scale(0.98);
  box-shadow:
    0 4rpx 20rpx rgba(237, 108, 0, 0.08),
    0 2rpx 10rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

.img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f8f8f8;
  border: 3rpx solid rgba(237, 108, 0, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
  object-fit: cover;
}

.player-card:active .img {
  transform: scale(0.95);
  border-color: rgba(237, 108, 0, 0.25);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.name {
  margin-top: 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #ed6c00; /* 橙色用于球员名称 (原为深绿色) */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: block;
  text-align: center;
  line-height: 1.3;
  letter-spacing: 0.3rpx;
  transition: all 0.3s ease;
}

.player-card:active .name {
  color: rgb(237, 108, 0); /* 激活状态使用橙色 */
}

.buttons {
  margin-top: 20rpx;
  width: 100%;
}

/* 号码样式 */
.number-container {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background-color: rgba(237, 108, 0, 0.9);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  z-index: 2;
}