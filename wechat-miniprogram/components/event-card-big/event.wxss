/* components/event-card-big/event.wxss - 现代化设计 (使用橙色系颜色设计系统) */
@import '../../styles/mixins.wxss';

.container {
  margin: 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 4rpx 24rpx rgba(237, 108, 0, 0.1),
    0 2rpx 12rpx rgba(237, 108, 0, 0.08);
  padding: 0;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.container:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 4rpx 20rpx rgba(237, 108, 0, 0.08),
    0 2rpx 10rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

/* 顶部装饰条 - 替换原有的::before伪元素 */
.card-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1;
}

/* 卡片内容区域 */
.card-content {
  padding: 40rpx 32rpx 32rpx 32rpx;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 0;
  margin-right: 30rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(237, 108, 0, 0.08);
  border-radius: 20rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.15);
  padding: 20rpx;
  transition: all 0.3s ease;
}

.container:active .image-container {
  transform: scale(0.95);
  background: rgba(237, 108, 0, 0.15);
  border-color: rgba(237, 108, 0, 0.25);
}

.image {
  width: 80rpx;
  height: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.15));
  transition: all 0.3s ease;
}

.container:active .image {
  transform: scale(0.95);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

/* ============================================================================
 * 赛事信息区域
 * ============================================================================ */

 .event-info {
  flex: 1;
  min-width: 0;
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08);
}

.event-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1.3;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all 0.3s ease;
}

.container:active .event-name {
  color: #ed6c00;
}

/* ============================================================================
 * 赛事ID显示
 * ============================================================================ */

.event-id-container {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background-color: rgba(237, 108, 0, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.1);
}

.event-id-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.event-id-value {
  font-size: 28rpx;
  font-weight: 800;
  color: #ed6c00;
  flex: 1;
  text-align: left;
}

.container:active .event-id-value {
  color: #ff8c32;
}

/* 按钮插槽区域 */
.event-actions {
  flex-shrink: 0;
  margin-left: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
  min-width: 80rpx;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .card-content {
    gap: 24rpx;
    padding: 24rpx;
  }

  .card-content.has-favorite-button {
    padding-right: 80rpx; /* 在响应式下稍微减少预留空间 */
  }

  .card-content.no-favorite-button {
    padding-right: 24rpx;
  }

  .event-actions {
    min-width: 70rpx;
    padding-left: 16rpx;
  }
}