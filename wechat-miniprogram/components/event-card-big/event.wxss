/* components/event-card-big/event.wxss - 现代化设计 */
.container {
  display: flex;
  flex-direction: row;
  margin: 40rpx 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 8rpx 32rpx rgba(237, 108, 0, 0.1),
    0 4rpx 16rpx rgba(237, 108, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  padding: 30rpx;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #2bb7b3 0%, #003f43 100%); /* 青绿色到深绿色渐变 */
  border-radius: 24rpx 24rpx 0 0;
}

.container:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 4rpx 20rpx rgba(237, 108, 0, 0.08),
    0 2rpx 10rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 0;
  margin-right: 30rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(237, 108, 0, 0.08);
  border-radius: 20rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.15);
  padding: 20rpx;
  transition: all 0.3s ease;
}

.container:active .image-container {
  transform: scale(0.95);
  background: rgba(237, 108, 0, 0.15);
  border-color: rgba(237, 108, 0, 0.25);
}

.image {
  width: 80rpx;
  height: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.15));
  transition: all 0.3s ease;
}

.container:active .image {
  transform: scale(0.95);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.text-container {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 0;
  margin-right: 0;
  overflow: hidden;
  padding: 10rpx 0;
}

.text {
  font-size: 32rpx;
  font-weight: 600;
  color: #003f43; /* 深绿色用于赛事名称 */
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  letter-spacing: 0.3rpx;
  transition: all 0.3s ease;
}

.container:active .text {
  color: rgb(237, 108, 0); /* 激活状态使用橙色 */
}