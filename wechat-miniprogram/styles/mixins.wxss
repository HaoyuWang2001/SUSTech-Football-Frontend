/* ============================================================================
 * 现代化卡片设计混入类
 * ============================================================================ */

.modern-card {
  /* 基础样式 */
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%) !important;
  border: 2rpx solid rgba(237, 108, 0, 0.12) !important;
  border-radius: 24rpx !important;
  box-shadow: 0 4rpx 24rpx rgba(237, 108, 0, 0.1) !important;

  /* 过渡动画 */
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1) !important;
}

.modern-card-hover {
  background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%) !important;
  box-shadow: 0 8rpx 32rpx rgba(237, 108, 0, 0.15) !important;
  transform: translateY(-2rpx) !important;
}

.modern-card-active {
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%) !important;
  box-shadow: 0 2rpx 12rpx rgba(237, 108, 0, 0.1) !important;
  transform: translateY(1rpx) !important;
}

.modern-card-header {
  /* 顶部装饰条 */
