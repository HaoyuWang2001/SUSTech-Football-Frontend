/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 20rpx 0;
  box-sizing: border-box;
}

page {
  /* background-color: #666666; */
  /* background-color: #CCCCCC; */
  /* background-color: #E0E0E0; */
  background-color: #F2F2F2;
}

/* -------------------- */
/* Block */
.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.block-title {
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  display: flex;
  flex-direction: row;
  justify-items: flex-start;
  align-items: center;
}

.block-more {
  padding: 10rpx 0;
  font-size: 14px;
  color: #666;
  display: flex;
  flex-direction: row;
  justify-items: flex-start;
  align-items: center;
}

.block-main {
  font-size: 14px;
  color: #666;
  padding: 5px 0;
}

/* ---------------------- */
/* button */
.button-custom {
  padding: 10rpx 40rpx;
  color: white;
  background-color: #ed6c00;
  font-weight: bold;
  border-radius: 20rpx;
}

/* ---------------------- */
/* table */
.table {
  display: table;
  width: 100%;
  border-collapse: collapse;
}

.row {
  display: table-row;
}

.header {
  font-weight: bold;
}

.cell {
  display: table-cell;
  padding: 8px;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle; /* 垂直居中 */
}

/* avatar */
.avatar-wrapper {
  padding: 0;
  width: 150rpx !important;
  height: 150rpx;
  border-radius: 50%;
}

.avatar {
  display: block;
  width: 150rpx;
  height: 150rpx;
}