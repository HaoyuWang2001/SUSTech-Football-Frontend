.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 20rpx 0;
  box-sizing: border-box;
}

page {
  /* background-color: #666666; */
  /* background-color: #CCCCCC; */
  /* background-color: #E0E0E0; */
  background-color: #F2F2F2;
}

/* ========== 现代化卡片容器样式 ========== */
.block-container {
  /* margin: 20rpx 20rpx; */
  /* border-radius: 24rpx; */
  padding: 30rpx 30rpx 0 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  box-shadow:
    0 16rpx 32rpx rgba(0, 0, 0, 0.06),
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  overflow: hidden;
  border: 4rpx solid rgba(237, 108, 0, 0.08);
  transition: all 0.3s ease;
}

.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.2);
}

.block-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000;
  letter-spacing: 0.5rpx;
}

.block-more {
  font-size: 26rpx;
  color: rgb(237, 108, 0);
  font-weight: 500;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(237, 108, 0, 0.08);
  transition: all 0.2s ease;
}

.block-more:active {
  background: rgba(237, 108, 0, 0.15);
  transform: scale(0.98);
}

.block-main {
  padding: 40rpx 10rpx 40rpx 10rpx;
}

/* ---------------------- */
/* button */
.button-custom {
  padding: 10rpx 40rpx;
  color: white;
  background-color: #ed6c00;
  font-weight: bold;
  border-radius: 20rpx;
}

/* ---------------------- */
/* table */
.table {
  display: table;
  width: 100%;
  border-collapse: collapse;
}

.row {
  display: table-row;
}

.header {
  font-weight: bold;
}

.cell {
  display: table-cell;
  padding: 8px;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle; /* 垂直居中 */
}

/* avatar */
.avatar-wrapper {
  padding: 0;
  width: 150rpx !important;
  height: 150rpx;
  border-radius: 50%;
}

.avatar {
  display: block;
  width: 150rpx;
  height: 150rpx;
}