/* pages/management/invite/invite.wxss */
.block-container {
  padding: 30rpx;
  border: 1rpx solid #cccccc;
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

/* Styles for the top section */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  /* Adds some space between the top and the main content */
}

/* Styles for the title */
.block-title {
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  /* 标题颜色改为黑色 */
}

/* Optional: If you want the "More" text but it's empty in the example */
.block-more {
  padding: 10rpx 0;
  font-size: 14px;
  color: #666;
  /* Medium grey color */
}

/* Styles for the main content area */
.block-main {
  font-size: 14px;
  color: #666;
  /* Medium grey color for the text */
  padding: 5px 0;
  /* Padding on top and bottom */
}

.search-container {
  display: flex;
  align-items: center;
  padding: 10rpx 50rpx;
  border: 4rpx solid rgb(237, 108, 0);
  border-radius: 20rpx;
  background-color: #f9f9f9;
  box-shadow: 4rpx 4rpx 8rpx rgba(237, 108, 0, 0.8);
  height: 100rpx;
  margin-bottom: 5%;
}

.search-container .search-input {
  flex: 1;
  height: 100%;
}

.search-container .search-button {
  height: 80%;
  width: 20%;
  font-size: small;
  font-weight: normal;
  color: white;
  background-color: rgb(237, 108, 0);
  margin-left: 10rpx; /* 添加左侧间距，使搜索框和按钮之间有一定的间距 */
  padding: 0 10rpx; /* 设置按钮的左右内边距 */
  line-height: 80rpx; /* 设置按钮的行高，使文本垂直居中 */
}

.no-results-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh; /* 设置高度为视窗的100% */
}
.no-results-container .image-container {
  width: 100px; /* 图片容器的宽度 */
  height: 100px; /* 图片容器的高度 */
}
.no-results-container .image-container image {
  width: 100%; /* 图片宽度占满容器 */
  height: 100%; /* 图片高度占满容器 */
}
.no-results-container .text {
  font-size: 16px; /* 文字大小 */
  color: #999; /* 文字颜色 */
  margin-top: 10px; /* 上边距 */
}