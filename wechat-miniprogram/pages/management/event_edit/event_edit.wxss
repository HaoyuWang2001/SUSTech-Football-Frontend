/* pages/management/event_edit/event_edit.wxss */
.block-space {
  border-bottom: 1px solid rgb(202, 202, 202);
  margin-bottom: 5%;
}

.important-person {
  margin-bottom: 5%;
}

.title {
  margin-left: 3%;
  margin-top: 3%;
  margin-bottom: 3%;
}

.title-container {
  padding: 30rpx 20rpx; /* 卡片内边距 */
  display: flex; /* 使用Flex布局 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
}

.image {
  flex: 0 0 auto;
  width: 120rpx;
  height: 120rpx;
}

.image-container {
  width: 120rpx;
  height: 120rpx;
  margin-left: 0;
  flex-shrink: 0;
}

.text-container {
  flex: 1;
  display: block;
  flex-direction: row;
  align-items: center;
  margin-left: 50rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.text {
  font-size: medium;
  white-space: normal; /* 允许文本换行 */
  word-wrap: break-word; /* 单词换行 */
  flex-grow: 1;
}

.name-edit {
  font-size: small;
  color: gray;
  display: inline-block; 
  border-bottom: 1px solid gray;
  margin-left: 3%;
  flex-shrink: 0;
}

.discription-container {
  background-color: #ffffff; /* 卡片背景色 */
  padding: 40rpx 20rpx; /* 卡片内边距 */
  margin: 10rpx; /* 外边距，根据需要调整 */
  flex-direction: row; /* 子项垂直排列 */
  align-items: center; /* 子项在交叉轴上居中对齐 */
  width: 90%;
  display: block;
}

.description-content {
  padding: 3%;
  margin-bottom: 5%;
}

.description {
  font-size: small;
  width: 100%; /* 调整宽度 */
  height: 80px; /* 调整高度 */
  resize: none; /* 禁止用户手动调整文本区域大小 */
  overflow: auto; /* 当内容超出时显示滚动条 */
}

.confirm-btn{
  border: none; /* 去除按钮边框 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #eb6c00; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
  font-size: medium;
  max-width: 45%;
}

.delete-btn{
  border: none; /* 去除按钮边框 */
  border-radius: 20px; /* 圆角 */
  cursor: pointer; /* 鼠标样式 */
  transition: background-color 0.3s ease; /* 背景色过渡效果 */
  background-color: #eb403a; /* 确认修改按钮背景色 */
  color: white; /* 文字颜色 */
  font-size: medium;
  max-width: 45%;
}

.eventType-container {
  margin-bottom: 3%;
}

.addStage-Tag{
  height: 60rpx;
  width: 200rpx;
  background-color: #eb903a;
  border-radius: 60rpx;
  text-align: center;
  align-items: center;
  color: white;
  font-size: medium;
  margin-bottom: 3%;
  margin-top: 3%;
  margin-right: 5%;
  margin-left: 5%;
}

.stage-container {
  margin: auto;
  margin-bottom: 3%;
}

.select-tag {
  margin-left: 10%;
  margin-bottom: 3%;
  margin-top: 3%;
}

/* 赛事信息行 */
.event-info-row {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.event-info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 200rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.deadline-not-set {
  color: #999;
  font-weight: normal;
}

/* 截止日期选择器 */
.deadline-row {
  border-bottom: none;
  padding-bottom: 10rpx;
}

.deadline-picker-row {
  display: flex;
  align-items: center;
  padding: 10rpx 0 20rpx 0;
  gap: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-value {
  background-color: #f5f5f5;
  padding: 16rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 160rpx;
  text-align: center;
}

.deadline-confirm-btn {
  background-color: #eb6c00;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}