/* pages/management/event_edit/event_roster_view/event_roster_view.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部信息 */
.header {
  background-color: transparent;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.team-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.team-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.team-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.roster-count {
  font-size: 28rpx;
  color: #666;
  margin-left: 100rpx;
}

/* 球员列表 */
.player-list {
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

/* 表格样式 */
.table {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.row.header {
  background-color: #fafafa;
  font-weight: 500;
  color: #666;
  font-size: 26rpx;
  padding: 15rpx 0;
}

.row:not(.header):active {
  background-color: #f5f5f5;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}

.cell-number {
  width: 80rpx;
  min-width: 80rpx;
}

.cell-player {
  flex: 1;
  justify-content: flex-start;
  min-width: 200rpx;
}

.cell-stats {
  width: 90rpx;
  min-width: 90rpx;
}

.player-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
  background-color: #eee;
}

.player-name {
  max-width: 180rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空状态 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}
