/* pages/management/event_roster/event_roster.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding: 20rpx;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

/* 截止日期横幅 */
.expired-banner {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #fff1f0 0%, #ffccc7 100%);
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  gap: 12rpx;
}

.expired-icon {
  font-size: 32rpx;
}

.expired-text {
  font-size: 28rpx;
  color: #cf1322;
  font-weight: 500;
}

/* 信息卡片 */
.info-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.event-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.event-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.event-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.team-name {
  font-size: 26rpx;
  color: #666;
}

.info-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
  background: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.stat-value.highlight {
  color: #eb6c00;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #e0e0e0;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #eb6c00 0%, #ff9500 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.info-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  margin-bottom: 10rpx;
}

.action-left {
  flex: 1;
}

.player-count {
  font-size: 28rpx;
  color: #666;
}

.action-right {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.action-btn.active {
  background: #e8f5e9;
  color: #43a047;
}

/* 球员列表 */
.player-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.player-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.player-card.selected {
  background: linear-gradient(135deg, #fff9f5 0%, #fff5eb 100%);
  border: 2rpx solid #eb6c00;
}

.player-card.hidden {
  display: none;
}

.player-check {
  margin-right: 20rpx;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: #07c160;
  border-color: #07c160;
}

.player-number {
  width: 60rpx;
  height: 60rpx;
  background: transparent;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #eb6c00;
  margin-right: 20rpx;
  border: 2rpx solid #eb6c00;
}

.player-card.selected .player-number {
  background: transparent;
  color: #eb6c00;
  border-color: #eb6c00;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.player-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-stats {
  display: flex;
  gap: 16rpx;
}

.player-stats .stat {
  font-size: 22rpx;
  color: #999;
}

.player-badge {
  background: #eb6c00;
  color: #fff;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bottom-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.count-text {
  font-size: 28rpx;
  color: #666;
}

.count-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #eb6c00;
}

.limit-text {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  background: linear-gradient(135deg, #eb6c00 0%, #ff9500 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 24rpx 60rpx;
}

.submit-btn.disabled {
  background: #ccc;
}

.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

