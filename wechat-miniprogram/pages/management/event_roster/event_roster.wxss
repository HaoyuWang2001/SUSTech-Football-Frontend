/* pages/management/event_roster/event_roster.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

.header {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.header-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  font-size: 28rpx;
}

.label {
  color: #666;
  width: 180rpx;
}

.value {
  color: #333;
  font-weight: 500;
  flex: 1;
}

.value.warning {
  color: #fa8c16;
}

.hint {
  background-color: #fff7e6;
  border: 1px solid #ffd591;
  border-radius: 8rpx;
  padding: 15rpx;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #d46b08;
}

.player-list {
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 表格样式 - 复用球队球员显示方式 */
.table {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.row.header {
  background-color: #fafafa;
  font-weight: 500;
  color: #666;
  font-size: 26rpx;
  padding: 15rpx 0;
}

.row.selected {
  background-color: #e6f7ff;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}

.cell-check {
  width: 80rpx;
  min-width: 80rpx;
}

.cell-number {
  width: 80rpx;
  min-width: 80rpx;
}

.cell-player {
  flex: 1;
  justify-content: flex-start;
  max-width: 280rpx;
}

.cell-stats {
  width: 100rpx;
  min-width: 100rpx;
}

.player-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
  background-color: #eee;
}

.player-name {
  max-width: 180rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.empty {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部固定按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footer-info {
  display: flex;
  flex-direction: column;
}

.selected-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #1890ff;
}

.limit-hint {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 20rpx 40rpx;
  min-width: 200rpx;
}

.submit-btn.disabled {
  background-color: #ccc;
}

.submit-btn:active {
  opacity: 0.8;
}

