/* pages/home/home.wxss */
/* 使用橙色系颜色设计系统 */
@import '../../styles/mixins.wxss';

/* 搜索框容器样式 - 现代化设计 */
.search-container {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  margin: 30rpx 20rpx;
  border: none;
  border-radius: 60rpx;
  .white-bg();
  .shadow-card-hover();
  .transition-normal();
  height: 100rpx;
}

/* 搜索容器聚焦状态 */
.search-container:focus-within {
  .border-focus();
}

.search-container .search-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  .gray-dark-color();
  background: transparent;
  border: none;
  outline: none;
  padding: 0 20rpx;
  caret-color: rgb(237, 108, 0); /* 光标颜色 */
}

.search-container .search-input::placeholder {
  .gray-medium-color();
  font-size: 28rpx;
  font-weight: 300;
}

.search-container .search-input:focus {
  .primary-alpha12-bg();
}

.search-container .search-button {
  height: 80rpx;
  width: auto;
  min-width: 100rpx;
  font-size: 28rpx;
  font-weight: 600;
  .white-color();
  .primary-button();
  border-radius: 40rpx !important;
  margin-left: 20rpx;
  padding: 0 24rpx;
  line-height: 80rpx;
  letter-spacing: 1rpx;
  white-space: nowrap;
}

.search-container .search-button:active {
  .primary-button-active();
}


/* news */
.news-cover-container {
  width: 100%;
  height: 600rpx;
}


.news-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.swiper-img {
  width: 90%;
  height: 75%;
  object-fit: contain;
  /* 确保整个封面显示出来 */
}

.swiper-title {
  color: black;
  text-align: center;
  font-size: small;
  margin-top: 10rpx;
}

/* 小圆点指示器 */
.indicator {
  right: 45%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 2%;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  margin: 0 5rpx;
  background-color: rgba(10, 10, 10, 0.5);
  border-radius: 50%;
}

.dot.active {
  background-color: rgb(237, 108, 0);
}

/* match */
.match-container {
  margin-top: 30rpx;
}

/* player */
.player-container {
  margin-top: 30rpx;
}

/* team */
.team-container {
  margin-top: 30rpx;
}

/* event */
.event-container {
  margin-top: 30rpx;
}

/* more-bar */
.more-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  /* 调整容器的高度 */
}

.more-bar .more-label {
  height: 60rpx;
  width: 200rpx;
}

.more-bar .more-button {
  height: 60rpx;
  width: 120rpx;
  font-size: 40%;
  /* 设置按钮文本的大小 */
  margin-left: 330rpx;
  /* 添加左侧间距，使搜索框和按钮之间有一定的间距 */
  padding: 0 10rpx;
  /* 设置按钮的左右内边距 */
  line-height: 65rpx;
  /* 设置按钮的行高，使文本垂直居中 */
}


/* 赛事大厅按钮 */
.hall {
  background-color: rgb(237, 108, 0);
  padding: 20rpx 20rpx;
  color: white;
  font-size: small;
  font-weight: bold;
  border-radius: 20rpx;
}

/* ========== 现代化卡片容器样式 ========== */
.block-container {
  margin: 40rpx 20rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.06),
    0 2rpx 12rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  overflow: hidden;
  border: 1rpx solid rgba(237, 108, 0, 0.08);
  transition: all 0.3s ease;
}

.block-container:active {
  transform: translateY(2rpx);
  box-shadow:
    0 4rpx 20rpx rgba(0, 0, 0, 0.05),
    0 1rpx 8rpx rgba(0, 0, 0, 0.03);
}

.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.1);
}

.block-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000000; /* 标题颜色改为黑色 */
  letter-spacing: 0.5rpx;
}

.block-more {
  font-size: 26rpx;
  color: rgb(237, 108, 0);
  font-weight: 500;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(237, 108, 0, 0.08);
  transition: all 0.2s ease;
}

.block-more:active {
  background: rgba(237, 108, 0, 0.15);
  transform: scale(0.98);
}

.block-main {
  padding: 30rpx;
}

/* ========== 现代化大厅图标样式 ========== */
.hall-bar {
  display: flex;
  justify-content: space-around;
  background: transparent;
  padding: 20rpx 0;
  border-radius: 20rpx;
}

.hall-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
  box-shadow:
    0 6rpx 20rpx rgba(0, 0, 0, 0.05),
    0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
  min-width: 160rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.05);
}

.hall-button:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow:
    0 2rpx 12rpx rgba(0, 0, 0, 0.04),
    0 1rpx 4rpx rgba(0, 0, 0, 0.02);
  background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
  border-color: rgba(237, 108, 0, 0.15);
}

.hall-image,
.event-hall-image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  transition: all 0.3s ease;
}

.hall-button:active .hall-image,
.hall-button:active .event-hall-image {
  transform: scale(0.95);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.08));
}

.hall-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 0.5rpx;
  transition: all 0.3s ease;
}

.hall-button:active .hall-text {
  color: rgb(237, 108, 0);
}

/* ========== 现代化无内容提示 ========== */
.no-favorite {
  margin: 40rpx 20rpx;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  padding: 60rpx 40rpx;
  background: rgba(237, 108, 0, 0.03);
  border-radius: 20rpx;
  border: 1rpx dashed rgba(237, 108, 0, 0.2);
}