/* 搜索框容器样式 - 现代化设计 */
.search-container {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx;
  margin: 30rpx 20rpx;
  border: none;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
  box-shadow:
    0 10rpx 30rpx rgba(237, 108, 0, 0.15),
    0 4rpx 12rpx rgba(237, 108, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  height: 100rpx;
  transition: all 0.3s ease;
}

.search-container .search-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
  padding: 0 20rpx;
  caret-color: rgb(237, 108, 0); /* 光标颜色 */
}

.search-container .search-input::placeholder {
  color: #999;
  font-size: 28rpx;
  font-weight: 300;
}

.search-container .search-input:focus {
  background: rgba(237, 108, 0, 0.03);
}

.search-container .search-button:active {
  transform: translateY(2rpx);
  box-shadow:
    0 2rpx 8rpx rgba(237, 108, 0, 0.25),
    0 1rpx 3rpx rgba(237, 108, 0, 0.2);
  background: linear-gradient(135deg, rgb(220, 95, 0) 0%, rgb(245, 130, 40) 100%);
}

.search-container .search-button {
  height: 80rpx;
  min-width: 120rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  background: linear-gradient(135deg, rgb(237, 108, 0) 0%, rgb(255, 140, 50) 100%);
  border: none;
  border-radius: 40rpx;
  margin-left: 20rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  box-shadow:
    0 4rpx 12rpx rgba(237, 108, 0, 0.3),
    0 2rpx 4rpx rgba(237, 108, 0, 0.2);
  transition: all 0.2s ease;
  letter-spacing: 1rpx;
}

.hall-bar {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
}

.hall-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.hall-image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}

.event-hall-image {
  width: 87rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}

.hall-text {
  font-size: small;
  font-weight: bold;
  color: #666;
}

/* news */
.news-cover-container {
  width: 100%;
  height: 600rpx;
}


.news-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.swiper-img {
  width: 90%;
  height: 75%;
  object-fit: contain;
  /* 确保整个封面显示出来 */
}

.swiper-title {
  color: black;
  text-align: center;
  font-size: small;
  margin-top: 10rpx;
}

/* 小圆点指示器 */
.indicator {
  right: 45%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 2%;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  margin: 0 5rpx;
  background-color: rgba(10, 10, 10, 0.5);
  border-radius: 50%;
}

.dot.active {
  background-color: rgb(237, 108, 0);
}

/* match */
.match-container {
  margin-top: 30rpx;
}

/* player */
.player-container {
  margin-top: 30rpx;
}

/* team */
.team-container {
  margin-top: 30rpx;
}

/* event */
.event-container {
  margin-top: 30rpx;
}

/* more-bar */
.more-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  /* 调整容器的高度 */
}

.more-bar .more-label {
  height: 60rpx;
  width: 200rpx;
}

.more-bar .more-button {
  height: 60rpx;
  width: 120rpx;
  font-size: 40%;
  /* 设置按钮文本的大小 */
  margin-left: 330rpx;
  /* 添加左侧间距，使搜索框和按钮之间有一定的间距 */
  padding: 0 10rpx;
  /* 设置按钮的左右内边距 */
  line-height: 65rpx;
  /* 设置按钮的行高，使文本垂直居中 */
}

/* 未关注任何X时样式 */
.no-favorite {
  margin-left: 20rpx;
  font-size: normal;
  color: #666;
}

/* 赛事大厅按钮 */
.hall {
  background-color: rgb(237, 108, 0);
  padding: 20rpx 20rpx;
  color: white;
  font-size: small;
  font-weight: bold;
  border-radius: 20rpx;
}