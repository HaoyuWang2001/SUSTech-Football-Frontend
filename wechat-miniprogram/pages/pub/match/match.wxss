/* pages/pub/match/match.wxss - 现代化设计 (使用橙色系颜色设计系统) */
@import '../../../styles/mixins.wxss';

/* ============================================================================
 * 页面头部区域
 * ============================================================================ */

.section-header {
  background-color: #ffffff;
  padding: 20rpx 0 40rpx 0;
  box-shadow: 0 4rpx 24rpx rgba(237, 108, 0, 0.1);
  position: relative;
  margin-bottom: 20rpx;
}

.buttons {
  margin: 10rpx 20rpx;
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
  z-index: 10;
}

/* 收藏按钮现代化 */
.favorite-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(237, 108, 0, 0.08);
  border: 2rpx solid rgba(237, 108, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.favorite-button:active {
  transform: scale(0.95);
  background-color: rgba(237, 108, 0, 0.15);
  border-color: rgba(237, 108, 0, 0.25);
}

.favorite-icon {
  width: 40rpx;
  height: 40rpx;
  transition: all 0.3s ease;
}

.favorite-button:active .favorite-icon {
  transform: scale(0.9);
}

/* ============================================================================
 * 现代化块容器
 * ============================================================================ */

.block-container {
  /* 基础卡片样式 */
  margin: 24rpx 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 4rpx 24rpx rgba(237, 108, 0, 0.1),
    0 2rpx 12rpx rgba(237, 108, 0, 0.08);
  padding: 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

/* 块容器顶部装饰条 */
.block-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.block-container:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 2rpx 12rpx rgba(237, 108, 0, 0.08),
    0 1rpx 6rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

/* 块头部 */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08);
}

.block-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  flex: 1;
}

.block-more {
  font-size: 26rpx;
  color: #ed6c00;
  font-weight: 500;
  padding: 8rpx 16rpx;
  background-color: rgba(237, 108, 0, 0.08);
  border-radius: 12rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.15);
  transition: all 0.3s ease;
}

.block-more:active {
  background-color: rgba(237, 108, 0, 0.15);
  border-color: rgba(237, 108, 0, 0.25);
  transform: translateY(2rpx);
}

/* 块主要内容 */
.block-main {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* ============================================================================
 * 现代化选项卡
 * ============================================================================ */

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  padding: 0;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 24rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.12);
  box-shadow: 0 4rpx 24rpx rgba(237, 108, 0, 0.1);
}

.tab {
  flex-grow: 1;
  text-align: center;
  padding: 28rpx 0;
  color: #666666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-text {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.tab.active .tab-text {
  color: #ed6c00;
  font-weight: 700;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 3rpx;
  opacity: 0;
  transform: scaleX(0.8);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.tab.active .tab-indicator {
  opacity: 1;
  transform: scaleX(1);
}

.tab-content {
  padding: 20rpx 0;
}

/* ============================================================================
 * 现代化按钮样式
 * ============================================================================ */

/* 直播/回放按钮现代化 */
.videoOrLive {
  /* 基础样式 */
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border: none;
  border-radius: 24rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  width: 100%;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(237, 108, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  overflow: hidden;
}

.videoOrLive::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff8c32 0%, #ffb366 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.videoOrLive:active {
  background: linear-gradient(90deg, #db6300 0%, #e86700 100%);
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.15);
  transform: translateY(2rpx);
}

/* 裁判页面按钮现代化 */
.button-update {
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border: none;
  border-radius: 24rpx;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(237, 108, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.button-update:active {
  background: linear-gradient(90deg, #db6300 0%, #e86700 100%);
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.15);
  transform: translateY(2rpx);
}

/* ============================================================================
 * 比赛赛况表格现代化
 * ============================================================================ */

.match-action-table {
  width: 100%;
  border-collapse: collapse;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.08);
}

.match-action-row {
  display: flex;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08);
  transition: all 0.3s ease;
}

.match-action-row:active {
  background-color: rgba(237, 108, 0, 0.05);
}

.match-action-row.header {
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  color: #ffffff;
  font-weight: 600;
  border-bottom: none;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.match-action-row.header .match-action-cell {
  color: #ffffff;
  font-weight: 600;
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
}

.match-action-row.header .match-action-cell:last-child {
  border-right: none;
}

.match-action-cell {
  flex: 1;
  padding: 24rpx 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid rgba(237, 108, 0, 0.08);
  min-height: 80rpx;
}

.match-action-cell:last-child {
  border-right: none;
}

.match-action-cell.action {
  color: #ed6c00;
  font-weight: 500;
}

/* 空状态提示 */
.empty-state {
  text-align: center;
  padding: 48rpx 32rpx;
  color: #999999;
  font-size: 28rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 16rpx;
  border: 2rpx dashed rgba(237, 108, 0, 0.12);
  margin: 20rpx;
}

/* ============================================================================
 * 评论区域样式（已禁用）
 * ============================================================================ */

.comment-container {
  display: flex;
  margin-top: 30rpx;
}

.input-container {
  display: flex;
  align-items: center;
  padding: 10rpx 50rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.3);
  border-radius: 20rpx;
  background-color: #f9f9f9;
  height: 80rpx;
  margin-right: 5%;
  transition: all 0.3s ease;
}

.input-container:focus-within {
  border-color: rgba(237, 108, 0, 0.5);
  box-shadow: 0 0 0 4rpx rgba(237, 108, 0, 0.1);
}

.input-container .input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
}

.button {
  align-self: center;
  height: 90%;
  max-width: 130rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border: none;
  border-radius: 16rpx;
  padding: 0 20rpx;
  line-height: 80rpx;
  box-shadow: 0 4rpx 12rpx rgba(237, 108, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.button:active {
  background: linear-gradient(90deg, #db6300 0%, #e86700 100%);
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.15);
  transform: translateY(2rpx);
}

/* ============================================================================
 * 响应式设计
 * ============================================================================ */

@media (max-width: 600rpx) {
  /* 块容器响应式 */
  .block-container {
    margin: 16rpx 16rpx;
    padding: 24rpx 20rpx;
  }

  .block-title {
    font-size: 30rpx;
  }

  .block-more {
    font-size: 24rpx;
    padding: 6rpx 12rpx;
  }

  .block-main {
    font-size: 26rpx;
  }

  /* 选项卡响应式 */
  .tabs {
    margin: 16rpx 16rpx 0 16rpx;
  }

  .tab {
    padding: 20rpx 0;
  }

  .tab-text {
    font-size: 26rpx;
  }

  .tab-content {
    padding: 0 16rpx 32rpx 16rpx;
  }

  /* 按钮响应式 */
  .videoOrLive {
    padding: 20rpx 24rpx;
    font-size: 26rpx;
  }

  .button-update {
    padding: 10rpx 20rpx;
    font-size: 24rpx;
  }

  /* 比赛赛况表格响应式 */
  .match-action-cell {
    padding: 20rpx 8rpx;
    font-size: 24rpx;
    min-height: 70rpx;
  }

  /* 收藏按钮响应式 */
  .favorite-button {
    width: 56rpx;
    height: 56rpx;
  }

  .favorite-icon {
    width: 36rpx;
    height: 36rpx;
  }
}
