  <view wx:if="{{activeIndex == 1}}">
    <view class="block-container">
      <view class="block-top">
        <text class="block-title">直播源</text>
        <text class="block-more"></text>
      </view>
      <view class="block-main">
        <button class="videoOrLive" wx:for="{{liveList}}" bind:tap="goToLiveOrVideo" data-url="{{item.liveUrl}}" wx:key="index">{{item.liveName}}</button>
      </view>
    </view>
    <view class="block-container">
      <view class="block-top">
        <text class="block-title">回放源</text>
        <text class="block-more"></text>
      </view>
      <view class="block-main">
        <button class="videoOrLive" wx:for="{{videoList}}" bind:tap="goToLiveOrVideo" data-url="{{item.videoUrl}}" wx:key="index">{{item.videoName}}</button>
      </view>
    </view>
  </view>

  <view wx:if="{{activeIndex == 2}}">
    <view class="block-container">
      <view class="block-main">
        <view wx:if="{{matchPlayerActionList.length == 0}}" class="empty-state">
          <text>暂无进球、助攻或红黄牌信息</text>
        </view>
        <view wx:else class="match-action-table">
          <view class="match-action-row header">
            <view class="match-action-cell">时间</view>
            <view class="match-action-cell">球队</view>
            <view class="match-action-cell">球员</view>
            <view class="match-action-cell">动作</view>
          </view>
          <view wx:for="{{matchPlayerActionList}}" wx:key="index" class="match-action-row">
            <view class="match-action-cell">{{item.time}}min</view>
            <view class="match-action-cell">{{item.teamId == homeTeam.teamId ? homeTeam.name : awayTeam.name}}</view>
            <view class="match-action-cell">{{item.player.number}}号 {{item.player.name}}</view>
            <view class="match-action-cell action">{{item.action}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>