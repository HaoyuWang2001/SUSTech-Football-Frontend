/* ============================================================================
 * 滚动视图样式优化
 * ============================================================================ */

/* 隐藏滚动条 - 微信小程序不支持嵌套伪元素 */
scroll-view {
  /* 隐藏滚动条样式 */
  scrollbar-width: none;
  -ms-overflow-style: none;
}

/* 单独定义Webkit滚动条样式 */
::-webkit-scrollbar {
  display: none;
}

/* 球队滚动列表容器 */
.team-scroll-container {
  padding: 8rpx 4rpx 24rpx 4rpx;
  margin: 0 -4rpx;
}

/* 比赛滚动列表容器 */
.match-scroll-container {
  padding: 8rpx 4rpx 24rpx 4rpx;
  margin: 0 -4rpx;
}

/* ============================================================================
 * 响应式调整
 * ============================================================================ */

@media (max-width: 600rpx) {
  /* 标题卡片响应式 */
  .title-card {
    margin: 16rpx 16rpx;
    padding: 32rpx 24rpx;
    min-height: 180rpx;
  }

  .cup {
    width: 100rpx;
    height: 100rpx;
    margin-right: 24rpx;
    padding: 16rpx;
  }

  .title {
    font-size: 36rpx;
    padding-right: 50rpx; /* 响应式下为收藏按钮留出空间 */
  }

  /* 块容器响应式 */
  .block-container {
    margin: 16rpx 16rpx;
    padding: 24rpx 20rpx;
  }

  .block-title {
    font-size: 30rpx;
  }

  .block-more {
    font-size: 24rpx;
    padding: 6rpx 12rpx;
  }

  /* 选项卡响应式 */
  .tabs {
    margin: 0 16rpx;
    border-radius: 12rpx;
  }

  .tab {
    padding: 20rpx 0;
    font-size: 26rpx;
  }

  /* 比赛选择器响应式 */
  .stageAndTag {
    margin: 16rpx 16rpx 0 16rpx;
    padding: 24rpx 28rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
  }

  .icon-down {
    height: 36rpx;
    width: 36rpx;
    margin-left: 12rpx;
  }

  /* 统计卡片响应式 */
  .statistic-container {
    gap: 24rpx;
  }
  .statistic-card {
    width: calc(50% - 12rpx);
    flex: 0 0 auto;
    padding: 24rpx 16rpx;
    border-radius: 16rpx;
  }

  .statistic-icon {
    width: 56rpx;
    height: 56rpx;
    margin-right: 16rpx;
    flex-shrink: 0;
  }

  .statistic-count {
    font-size: 40rpx;
    min-width: 70rpx;
  }

  .statistic-title {
    font-size: 24rpx;
  }

  /* 积分榜表格响应式 */
  .cell {
    padding: 20rpx 8rpx;
    font-size: 24rpx;
  }

  .cell-team-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 12rpx;
  }

  /* 收藏按钮响应式 */
  .buttons {
    top: 24rpx;
    right: 24rpx;
  }

  .favorite-button {
    width: 36rpx;
    height: 36rpx;
  }

  .favorite-icon {
    width: 36rpx;
    height: 36rpx;
  }
}