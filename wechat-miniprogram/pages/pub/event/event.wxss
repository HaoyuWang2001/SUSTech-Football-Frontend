/* pages/pub/event/event.wxss */
@import '../../../styles/mixins.wxss';

/* 最上方的 Title Card - 现代化设计 */
.title-card {
  /* 基础卡片样式 */
  min-height: 200rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 4rpx 24rpx rgba(237, 108, 0, 0.1),
    0 2rpx 12rpx rgba(237, 108, 0, 0.08);
  padding: 40rpx 32rpx;
  margin: 24rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

/* 顶部装饰条 */
.title-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 24rpx 24rpx 0 0;
}

/* 激活状态 */
.title-card:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 2rpx 12rpx rgba(237, 108, 0, 0.08),
    0 1rpx 6rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

.cup {
  flex: 0 0 auto;
  width: 120rpx;
  height: 120rpx;
  margin-right: 32rpx;
  background: rgba(237, 108, 0, 0.08);
  border-radius: 24rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.15);
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(237, 108, 0, 0.15);
  transition: all 0.3s ease;
}

.title-card:active .cup {
  transform: scale(0.95);
  border-color: rgba(237, 108, 0, 0.25);
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.1);
}

.title-container {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.title {
  font-size: 35rpx;
  font-weight: 700;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
  transition: all 0.3s ease;
  padding-right: 60rpx; /* 为收藏按钮留出空间 */
  box-sizing: border-box;
}

.title-card:active .title {
  color: #ed6c00;
}

/* ============================================================================
 * 现代化块容器
 * ============================================================================ */

.block-container {
  /* 基础卡片样式 */
  margin: 24rpx 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.12);
  box-shadow:
    0 4rpx 24rpx rgba(237, 108, 0, 0.1),
    0 2rpx 12rpx rgba(237, 108, 0, 0.08);
  padding: 32rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

/* 块容器顶部装饰条 */
.block-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.block-container:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 2rpx 12rpx rgba(237, 108, 0, 0.08),
    0 1rpx 6rpx rgba(237, 108, 0, 0.06);
  border-color: rgba(237, 108, 0, 0.25);
}

/* 块头部 */
.block-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08);
}

.block-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  flex: 1;
}

.block-more {
  font-size: 26rpx;
  color: #ed6c00;
  font-weight: 500;
  padding: 8rpx 16rpx;
  background-color: rgba(237, 108, 0, 0.08);
  border-radius: 12rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.15);
  transition: all 0.3s ease;
}

.block-more:active {
  background-color: rgba(237, 108, 0, 0.15);
  border-color: rgba(237, 108, 0, 0.25);
  transform: translateY(2rpx);
}

/* 块主要内容 */
.block-main {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* ------------------------ */

/* ============================================================================
 * 现代化选项卡
 * ============================================================================ */

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  padding: 0;
  margin: 0 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.12);
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.08);
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  color: #666666;
  font-size: 28rpx;
  font-weight: 500;
  background-color: transparent;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  border-bottom: 2rpx solid transparent;
}

.tab:active {
  background-color: rgba(237, 108, 0, 0.05);
}

/* 激活状态的tab样式 */
.tab.active {
  color: #ed6c00;
  font-weight: 600;
  border-bottom: 4rpx solid #ed6c00;
  background-color: rgba(237, 108, 0, 0.05);
}

/* 激活状态指示器 */
.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 2rpx 2rpx 0 0;
}

.tab-content {
  margin-top: 24rpx;
  padding: 0 20rpx 20rpx 20rpx;
}

/* 比赛tab下，“选择比赛及轮次” picker - 现代化设计 */
.stageAndTag {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #666666;
  padding: 32rpx 40rpx;
  margin: 24rpx 20rpx 0 20rpx;
  border-radius: 24rpx;
  border: 2rpx solid rgba(237, 108, 0, 0.12);
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  box-shadow:
    0 4rpx 24rpx rgba(237, 108, 0, 0.1),
    0 2rpx 12rpx rgba(237, 108, 0, 0.08);
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

/* 顶部装饰条 */
.stageAndTag::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.stageAndTag:active {
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-color: rgba(237, 108, 0, 0.25);
  transform: translateY(4rpx) scale(0.995);
  box-shadow:
    0 2rpx 12rpx rgba(237, 108, 0, 0.08),
    0 1rpx 6rpx rgba(237, 108, 0, 0.06);
}

.icon-down {
  height: 44rpx;
  width: 44rpx;
  margin-left: 20rpx;
  opacity: 0.7;
  transition: all 0.3s ease;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.stageAndTag:active .icon-down {
  opacity: 0.9;
  transform: translateY(2rpx);
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.05));
}

/* ============================================================================
 * 现代化积分榜表格
 * ============================================================================ */

.table {
  width: 100%;
  border-collapse: collapse;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.08);
}

.row {
  display: flex;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08);
  transition: all 0.3s ease;
}

.row:active {
  background-color: rgba(237, 108, 0, 0.05);
}

.row.header {
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  color: #ffffff;
  font-weight: 600;
  border-bottom: none;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.row.header .cell {
  color: #ffffff;
  font-weight: 600;
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
}

.row.header .cell:last-child {
  border-right: none;
}

.cell {
  flex: 1;
  padding: 24rpx 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid rgba(237, 108, 0, 0.08);
  min-height: 80rpx;
}

.cell:last-child {
  border-right: none;
}

.cell-team {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
}

.cell-team-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(237, 108, 0, 0.15);
  background-color: rgba(237, 108, 0, 0.08);
  padding: 4rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 响应式调整 */
@media (max-width: 600rpx) {
  .cell {
    padding: 20rpx 8rpx;
    font-size: 24rpx;
  }

  .cell-team-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 12rpx;
  }
}

/* ============================================================================
 * 现代化统计卡片
 * ============================================================================ */

.statistic-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  gap: 24rpx;
}

.statistic-card {
  width: calc(50% - 12rpx);
  flex: 0 0 auto;
  box-sizing: border-box;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border: 2rpx solid rgba(237, 108, 0, 0.12);
  border-radius: 20rpx;
  padding: 32rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(237, 108, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  position: relative;
  overflow: hidden;
}

/* 统计卡片装饰条 */
.statistic-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
  border-radius: 20rpx 20rpx 0 0;
}

.statistic-card:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow: 0 2rpx 8rpx rgba(237, 108, 0, 0.08);
  border-color: rgba(237, 108, 0, 0.25);
}

.statistic-card-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  width: 100%;
  flex-wrap: nowrap;
}

.statistic-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.15));
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.statistic-card:active .statistic-icon {
  transform: scale(0.95);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.statistic-count {
  font-weight: 800;
  font-size: 48rpx;
  color: #ed6c00;
  text-shadow: 0 2rpx 4rpx rgba(237, 108, 0, 0.2);
  line-height: 1.2;
  min-width: 80rpx;
  text-align: center;
}

.statistic-title {
  color: #666666;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(237, 108, 0, 0.08);
  width: 100%;
}

.buttons {
  text-align: right;
  position: absolute;
  top: 36rpx;
  right: 32rpx;
  z-index: 3;
}

.favorite-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.favorite-button:active {
  transform: scale(0.92);
  opacity: 0.8;
}

.favorite-icon {
  width: 60rpx;
  height: 60rpx;
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.1));
  transition: all 0.2s ease;
}

