/* pages/pub/team/team.wxss */
@import '../../styles/mixins.wxss';

page {
  background-color: #f2f2f2; /* Colors.grayLighter */
  min-height: 100vh;
}

/* ============================================================================
 * 页面头部区域
 * ============================================================================ */
.section-header {
  text-align: center;
  background-color: #ffffff; /* Colors.white */
  padding: 20rpx 0 40rpx 0;
  border-radius: 0 0 24rpx 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(237, 108, 0, 0.1); /* Shadows.card */
}

.buttons {
  margin: 10rpx 20rpx;
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
  transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.icon:active {
  transform: scale(0.95);
}

/* ============================================================================
 * 标签页导航
 * ============================================================================ */
.tabs {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff; /* Colors.white */
  padding: 0;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 24rpx; /* Tokens.borderRadiusLarge */
  border: 2rpx solid rgba(237, 108, 0, 0.12); /* Borders.card */
  box-shadow: 0 4rpx 24rpx rgba(237, 108, 0, 0.1); /* Shadows.card */
}

.tab {
  flex-grow: 1;
  text-align: center;
  padding: 28rpx 0;
  color: #666666; /* Colors.grayDark */
  position: relative;
  transition: all 0.3s ease;
}

.tab:active {
  background-color: rgba(237, 108, 0, 0.05); /* Colors.primaryAlpha25 变体 */
}

.tab-text {
  font-size: 28rpx; /* Tokens.fontSizeMedium */
  font-weight: 500;
}

.tab.active .tab-text {
  color: #ed6c00; /* Colors.primary */
  font-weight: 700;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 6rpx;
  background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%); /* Gradients.primary */
  border-radius: 3rpx;
  opacity: 0;
  transform: scaleX(0.8);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
}

.tab.active .tab-indicator {
  opacity: 1;
  transform: scaleX(1);
}

.tab-content {
  margin-top: 0;
  padding: 20rpx 20rpx 32rpx 20rpx;
}

/* ============================================================================
 * 现代化卡片容器
 * ============================================================================ */
.block-container {
  margin-bottom: 24rpx;
}

.block-top {
  margin-bottom: 20rpx;
}

.block-title {
  font-size: 32rpx; /* Tokens.fontSizeLarge */
  font-weight: 600;
}

.block-more {
  font-size: 24rpx; /* Tokens.fontSizeSmall */
  color: #ed6c00; /* Colors.primary */
  text-decoration: underline;
}

.block-main {
  padding: 0 8rpx;
}

/* 球队ID样式 */
.team-id {
  display: block;
  font-size: 64rpx; /* Tokens.fontSizeXxlarge */
  font-weight: 800;
  color: #ed6c00; /* Colors.primary */
  text-align: center;
  margin: 20rpx 0 16rpx 0;
  letter-spacing: 2rpx;
}

.team-id-hint {
  display: block;
  font-size: 24rpx; /* Tokens.fontSizeSmall */
  color: #cccccc; /* Colors.grayMedium */
  text-align: center;
  line-height: 1.5;
}

/* 球队简介样式 */
.team-description {
  display: block;
  font-size: 28rpx; /* Tokens.fontSizeMedium */
  color: #666666; /* Colors.grayDark */
  line-height: 1.6;
  padding: 16rpx 0;
}

/* ============================================================================
 * 功能按钮区域
 * ============================================================================ */
.function-container {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
}

.function-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 40rpx;
  border-radius: 24rpx; /* Tokens.borderRadiusLarge */
  border: 2rpx solid #ed6c00; /* Colors.primary */
  background-color: #ffffff; /* Colors.white */
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  min-width: 200rpx;
}

.function-button:active {
  background-color: rgba(237, 108, 0, 0.1); /* Colors.primaryAlpha25 变体 */
  transform: translateY(4rpx) scale(0.98);
  border-color: rgba(237, 108, 0, 0.5); /* Colors.primaryAlpha50 */
}

.function-image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
}

.function-text {
  font-size: 28rpx; /* Tokens.fontSizeMedium */
  font-weight: 600;
  color: #ed6c00; /* Colors.primary */
}

/* ============================================================================
 * 滚动容器
 * ============================================================================ */
.scroll-container {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  padding-bottom: 20rpx;
}

/* player-card-small 组件自带样式，无需额外设置 */

/* ============================================================================
 * 球员表格（保留原有样式）
 * ============================================================================ */
.player-avatar {
  width: 50rpx;
  min-width: 50rpx;
  max-width: 50rpx;
  height: 50rpx;
  border-radius: 20rpx;
}

.player-name {
  max-width: 150rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.table {
  margin-top: 32rpx;
  border: 1rpx solid rgba(237, 108, 0, 0.12); /* Borders.card */
  border-radius: 16rpx; /* Tokens.borderRadiusMedium */
  overflow: hidden;
}

.row {
  display: flex;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08); /* Borders.inner */
}

.row.header {
  background-color: rgba(237, 108, 0, 0.05); /* Colors.primaryAlpha25 变体 */
  font-weight: 600;
  color: #ed6c00; /* Colors.primary */
}

.row:last-child {
  border-bottom: none;
}

.cell {
  flex: 1;
  padding: 16rpx 8rpx;
  text-align: center;
  font-size: 24rpx; /* Tokens.fontSizeSmall */
  color: #666666; /* Colors.grayDark */
}

.row.header .cell {
  color: #ed6c00; /* Colors.primary */
}

/* ============================================================================
 * 响应式设计
 * ============================================================================ */
@media (max-width: 600rpx) {
  .tabs {
    margin: 16rpx 16rpx 0 16rpx;
  }

  .tab-content {
    padding: 0 16rpx 32rpx 16rpx;
  }

  .block-container {
    margin-bottom: 20rpx;
  }

  .function-button {
    padding: 24rpx 32rpx;
    min-width: 180rpx;
  }

  .team-id {
    font-size: 48rpx;
  }
}