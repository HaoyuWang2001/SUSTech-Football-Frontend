/* pages/pub/team/player_stats/player_stats.wxss */
@import '../../../../styles/mixins.wxss';

.container {
  padding: 20rpx;
  background-color: #f2f2f2;
  min-height: 100vh;
}

.table-container {
  padding: 20rpx;
}

.player-info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
}

.player-avatar {
  width: 50rpx;
  min-width: 50rpx;
  max-width: 50rpx;
  height: 50rpx;
  border-radius: 20rpx;
}

.player-name {
  max-width: 150rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.table {
  margin-top: 0;
  border: 1rpx solid rgba(237, 108, 0, 0.12);
  border-radius: 16rpx;
  overflow: hidden;
}

.row {
  display: flex;
  border-bottom: 1rpx solid rgba(237, 108, 0, 0.08);
}

.row.header {
  background-color: rgba(237, 108, 0, 0.05);
  font-weight: 600;
  color: #ed6c00;
}

.row:last-child {
  border-bottom: none;
}

.cell {
  flex: 1;
  padding: 16rpx 8rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
}

.row.header .cell {
  color: #ed6c00;
}