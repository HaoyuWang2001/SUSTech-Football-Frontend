<scroll-view class="scrollarea" scroll-y type="list">
  <!-- 用户信息卡片 -->
  <view class="user-profile-card modern-card">
    <view class="modern-card-header"></view>
    <view class="user-profile-content">
      <!-- 头像区域 -->
      <view class="user-avatar-container">
        <image class="user-avatar" src="{{avatarUrl}}" mode="aspectFill"></image>
      </view>

      <!-- 用户信息区域 -->
      <view class="user-info-container">
        <view class="user-name">{{nickName}}</view>
        <view class="user-id">用户ID: {{userId}}</view>
      </view>
    </view>
  </view>

  <view class="container-mine">
    <view class="block-container">
      <view class="block-top">
        <view class="block-title">
          账户管理
        </view>
        <!-- <text class="block-more">查看更多</text> -->
      </view>
      <view class="block-main">
        <view style="margin-bottom: 40rpx;">用户id同时作为球队、比赛、赛事管理者的唯一标识</view>
        <view class="function-container">
          <button open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar" size="mini" class="button-custom">
            <text>更换头像</text>
          </button>
          <button size="mini" bind:tap="openChangeNickNameModal" class="button-custom">
            <text>更改昵称</text>
          </button>
        </view>
      </view>
    </view>

