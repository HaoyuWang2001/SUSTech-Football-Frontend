  /* pages/mine/mine.wxss */
  @import '../../styles/mixins.wxss';






  .function-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 30rpx;
    border-radius: 24rpx;
    background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05), 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
    transition: all 0.3s ease;
    min-width: 160rpx;
    border: 1rpx solid rgba(237, 108, 0, 0.05);
  }

  .function-button:active {
    transform: translateY(4rpx) scale(0.98);
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04), 0 1rpx 4rpx rgba(0, 0, 0, 0.02);
    background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
    border-color: rgba(237, 108, 0, 0.15);
  }

  .function-container {
    display: flex;
  }

  .function-image {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 20rpx;
    filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
    transition: all 0.3s ease;
  }

  .function-button:active .function-image {
    transform: scale(0.95);
    filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.08));
  }

  .function-text {
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
    letter-spacing: 0.5rpx;
    transition: all 0.3s ease;
  }

  .function-button:active .function-text {
    color: rgb(237, 108, 0);
  }

  .container-mine {
    padding: 0 20rpx;
    margin-top: 0;
  }

  /* 用户信息卡片样式 */
  .user-profile-card {
    margin: 20rpx;
    padding: 40rpx 30rpx;
    position: relative;
  }

  .user-profile-content {
    display: flex;
    align-items: center;
  }

  .user-avatar-container {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    overflow: hidden;
    background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
    border: 4rpx solid rgba(237, 108, 0, 0.15);
    box-shadow: 0 8rpx 32rpx rgba(237, 108, 0, 0.15);
    margin-right: 40rpx;
    flex-shrink: 0;
  }

  .user-avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }

  .user-info-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .user-name {
    font-size: 40rpx;
    font-weight: bold;
    color: #333333;
    margin-bottom: 16rpx;
    line-height: 1.2;
  }

  .user-id {
    font-size: 28rpx;
    color: #666666;
    background: rgba(237, 108, 0, 0.08);
    padding: 12rpx 24rpx;
    border-radius: 20rpx;
    display: inline-block;
    align-self: flex-start;
  }

  /* 自定义按钮样式 */
  .button-custom {
    padding: 12rpx 40rpx;
    color: white;
    background: linear-gradient(90deg, #ed6c00 0%, #ff8c32 100%);
    font-weight: bold;
    border-radius: 24rpx;
    border: none;
    box-shadow: 0 4rpx 12rpx rgba(237, 108, 0, 0.2);
    transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1);
  }

  .notification-container {
    margin-bottom: 40rpx;
  }

  .notification-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid rgba(237, 108, 0, 0.1);
    background: transparent;
  }

  .red-dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background-color: #ff4d4f;
    margin-left: 20rpx;
  }

  .notification-box {
    background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
    border: 1rpx solid rgba(237, 108, 0, 0.08);
    border-radius: 0 0 24rpx 24rpx;
    overflow: hidden;
    transition: height 0.3s ease-in-out;
  }

  .invitation-item {
    padding: 30rpx;
    border-bottom: 1rpx solid rgba(237, 108, 0, 0.05);
    transition: all 0.2s ease;
  }

  .invitation-item:active {
    background: rgba(237, 108, 0, 0.03);
  }

  .invitation-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1.4;
  }

  .icon {
    width: 60rpx;
    height: 60rpx;
  }