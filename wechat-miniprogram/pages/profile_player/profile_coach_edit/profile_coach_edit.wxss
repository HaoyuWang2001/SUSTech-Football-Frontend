/* pages/profile_player/profile_coach_edit/profile_coach_edit.wxss */
/* 导入颜色设计系统混入类 */
@import '../../../styles/mixins.wxss';

/* 卡片容器 */
.profile-edit-card {
  width: 90%;
  margin: auto;
  padding: 40rpx 32rpx;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.avatar-label {
  font-size: 28rpx;
  /* font-weight: bold; */
}

.avatar-button {
  padding: 0 !important;
  background: transparent !important;
  border: none !important;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50% !important;
  overflow: hidden !important;
  margin: 0 !important;
  line-height: normal !important;
  min-width: 0 !important;
  box-shadow: 0 8rpx 32rpx rgba(237, 108, 0, 0.15) !important;
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.3, 1) !important;
}

.avatar-button-hover {
  transform: scale(1.05) !important;
  box-shadow: 0 12rpx 40rpx rgba(237, 108, 0, 0.2) !important;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 表单字段 */
.form-field {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  transition: background-color 0.3s ease !important;
}

.field-hover {
  background-color: rgba(237, 108, 0, 0.05) !important;
  border-radius: 16rpx !important;
  padding: 32rpx 24rpx !important;
  margin: 0 -24rpx !important;
}

.field-label {
  font-size: 28rpx;
  font-weight: 500;
}

.field-value {
  display: flex;
  align-items: center;
}

.value-text {
  /* font-size: 28rpx; */
  max-width: 400rpx;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  white-space: nowrap !important;
}

.edit-indicator {
  font-size: 36rpx;
  margin-left: 16rpx;
  font-weight: bold;
}

/* 分隔线 */
.field-divider {
  height: 1rpx;
  margin: 0;
}

/* 提交按钮 */
.submit-button {
  width: 100% !important;
  height: 88rpx !important;
  margin-top: 48rpx !important;
  font-size: 32rpx !important;
  font-weight: bold !important;
  line-height: normal !important;
  min-width: 0 !important;
}

/* 模态框样式保持不变 */
.modal-content {
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.modal-content text {
  display: block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666666;
}

.modal-content input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
}