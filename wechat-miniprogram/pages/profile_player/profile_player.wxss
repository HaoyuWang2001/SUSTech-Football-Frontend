/* 头部 */
@import '../../styles/mixins.wxss';
/* 用户信息卡片样式 */
.user-profile-card {
  margin: 20rpx;
  padding: 40rpx 30rpx;
  position: relative;
}

.user-profile-content {
  display: flex;
  align-items: center;
}

.user-avatar-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border: 4rpx solid rgba(237, 108, 0, 0.15);
  box-shadow: 0 8rpx 32rpx rgba(237, 108, 0, 0.15);
  margin-right: 40rpx;
  flex-shrink: 0;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.user-id {
  font-size: 28rpx;
  color: #666666;
  background: rgba(237, 108, 0, 0.08);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
  align-self: flex-start;
}

.info-section {
  width: 100%;
  margin-left: 20rpx;
}

.info-section text {
  display: block;
  margin-bottom: 10rpx;
  font-size: small;
}

.function-container {
  display: flex;
}

.function-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.function-image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}

.function-text {
  font-size: small;
  color: #666;
}